<main>
  <div class="img"></div>
  <div class="container">
   <h1>Login</h1>

  <form method="POST" action="/login" id="login-form">
    <div class="form-group">
    <label for="username">
      Username
      <input id="username" type="text" name="username" class="form-control" placeholder="username" required>
    </label>
    </div>
    <div class="form-group">
    <label for="password">
      Password  <input id="password" type="password" name="password" class="form-control" placeholder="password" required>
    </label>
    </div>
  
    <button type="submit" class="btn">login</button>
  </form>

  <br>
  {{#if hasErrors}}
    <p class="error">{{error}}</p>
  {{/if}}
  <br>
  <a href="/signup">Need to register? Click here to sign-up</a>
</div>
</main>